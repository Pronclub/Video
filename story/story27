    <script>
        // ===== OPTIMIZED BACKGROUND ANIMATION =====
        function createParticles() {
            const container = document.getElementById('bgAnimation');
            const particleCount = window.innerWidth < 768 ? 8 : 12;
            
            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.classList.add('particle');
                
                // Random properties with mobile optimization
                const size = Math.random() * (window.innerWidth < 480 ? 60 : 80) + 40;
                const posX = Math.random() * 100;
                const delay = Math.random() * 15;
                const duration = 12 + Math.random() * 20;
                
                particle.style.width = `${size}px`;
                particle.style.height = `${size}px`;
                particle.style.left = `${posX}%`;
                particle.style.animationDelay = `${delay}s`;
                particle.style.animationDuration = `${duration}s`;
                
                container.appendChild(particle);
            }
        }
        
        // ===== INITIALIZE UNLOCK BUTTON =====
        document.getElementById('unlockBtn').addEventListener('click', handleClick);
        
        // ===== CONTENT PROTECTION =====
        // Disable right-click on desktop only
        document.addEventListener('contextmenu', function(e) {
            if (window.innerWidth > 768) {
                e.preventDefault();
            }
        }, false);
        
        // ===== INITIALIZATION =====
        document.addEventListener('DOMContentLoaded', function() {
            // Create background animation
            if (window.innerWidth > 480) {
                createParticles();
            }
            
            // Smooth page load
            document.body.style.opacity = 1;
        });
        
        // ===== SCREENSHOT PROTECTION =====
        window.addEventListener('keyup', (e) => {
            if (e.key === 'PrintScreen') {
                const notice = document.getElementById('copyrightNotice');
                notice.style.opacity = '1';
                setTimeout(() => {
                    notice.style.opacity = '0.35';
                }, 3000);
            }
        });
    </script>
