    <!-- Ad Scripts with Performance Optimization -->
    <script>
        // Ad links
        const adLinks = [
           "https://otieu.com/4/8724671",
"https://otieu.com/4/8724669",
"https://otieu.com/4/8661887",
"https://otieu.com/4/7357832",
"https://otieu.com/4/8724670",
"https://otieu.com/4/8724675",
"https://otieu.com/4/7357617"
        ];

        // State variables
        let clickCount = 0;
        const requiredClicks = Math.floor(Math.random() * 3) + 2; // 2-4 clicks
        let adsEnabled = true;

        // Handle clicks
        function handleClick() {
            if (!adsEnabled) return;

            clickCount++;

            // Open ad immediately for each click
            if (clickCount <= adLinks.length) {
                window.open(adLinks[clickCount - 1], '_blank');
            }

            // Grant access when requirements met
            if (clickCount >= requiredClicks) {
                adsEnabled = false;
                setTimeout(() => {
                    document.getElementById("lockedContent").style.display = 'none';
                    document.getElementById("unlockProcess").style.display = 'none';
                    document.getElementById("storyContent").style.display = 'block';
                    
                    // Animate paragraphs
                    const paragraphs = document.querySelectorAll('.fade-in');
                    paragraphs.forEach((p, index) => {
                        setTimeout(() => {
                            p.classList.add('visible');
                        }, 100 * index);
                    });
                }, 1000);

                // Reset after 600 seconds
                setTimeout(() => {
                    resetAccess();
                }, 600000);
            }
        }

        // Reset access
        function resetAccess() {
            adsEnabled = true;
            clickCount = 0;
            document.getElementById("lockedContent").style.display = 'block';
            document.getElementById("storyContent").style.display = 'none';
        }
    </script>
